<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:text="@string/tittle_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:layout_marginTop="@dimen/tittle_margin_top"
            android:layout_gravity="center_horizontal"/>


        <Button
            android:text="@string/app_film"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/film"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:onClick="clickFilm"/>

        <Button
            android:text="@string/app_stock"
            android:id="@+id/stock"
            style="@style/buttonStyle"/>

        <Button
            android:text="@string/app_xyz"
            android:id="@+id/xyzReader"
            style="@style/buttonStyle"/>

        <Button
            android:text="@string/app_news"
            android:id="@+id/news"
            style="@style/buttonStyle"/>

        <Button
            android:text="@string/app_gd"
            android:id="@+id/graduationDesign"
            style="@style/buttonStyle"/>

    </LinearLayout>
</ScrollView>
